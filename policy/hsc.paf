#<?cfg paf policy>

camera: HSC

do: {
    isr: {
        processAmp: {
            saturation: true
            overscan: true
        }
        assembly: true
        bias: false
        variance: true
        dark: false
        flat: true
        fringe: false
        defects: true
        background: true
    }
    calibrate: {
        repair: {
            interpolate: true
            cosmicray: true
        }
        psf: true
        apcorr: true
        background: false
        distortion: true
        astrometry: true
        zeropoint: true
    }
    phot: true
}

detect: {
    thresholdValue: 5.0
    thresholdType: stdev
}

measure: @@meas_algorithms:policy:MeasureSourcesDefaults.paf

defects: {
    grow: 0
}

cosmicray: {
    nCrPixelMax: 200000
}

background: {
    binsize: 512
}

filters: {
    # Translation table for astrometry.net matching, and therefore photometric calibration
    B: g
    g: g
    r: r
    i: i
    z: z
    y: z
}
#filters: {
#    # Translation table for astrometry.net matching, and therefore photometric calibration
#    B: G
#    g: G
#    r: R
#    i: I
#    z: Z
#    y: Z
#}

distortion: {
    class: "hsc.meas.match.hscDistortion.HscDistortion"
}

instrumentExtras: {
    solveTansip: {
        CRPIXMODE: MANUAL #AUTO for A	UTO MODE, MANUAL for MANUAL MODE
        CCDPMODE: 1       #1=DETERMINING CCD POSITION
        NCCD: 100         #NUMBER of CCD for analysis
        LSIPORDER: 3
        SIPORDER: 9
        PSIPORDER: 9
        CLIPSIGMA: 3.0
        CRPIX1: 0.0                #CRPIX VALUE OF AXIS 1(MANUAL MODE)
        CRPIX2: 0.0                #CRPIX VALUE OF AXIS 2(MANUAL MODE)
        CHECKFILE: 1               #1=out put fitting check file
    }
}

astrometry: {
    defaultFilterName: R
    numBrightStars: 200
    sipOrder: 2
    calculateSip: true
    starGalaxyColumnName: "starnotgal"
    #blindSolve: true
    #magErrorColumnPattern: "%(filter)s_ERR"
}


psf: {
    select: {
        sizeCellX: 512
        sizeCellY: 512
        fluxLim: 200.0
        clumpNSigma: 1.5
    }
    algorithm: {
        nIterForPsf: 10
        constantWeight: true
        lambda: 0.5
        reducedChi2ForPsfCandidates: 1.2
        nEigenComponents: 4
        kernelSize:       21
        spatialOrder: 2
        nStarPerCell: 0                 # unlimited
        nStarPerCellSpatialFit: 10
    }
}
