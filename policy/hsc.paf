#<?cfg paf policy>

camera: HSC

do: {
    isr: {
        processAmp: {
            saturation: true
            overscan: true
        }
        assembly: true
        bias: false
        variance: true
        dark: false
        flat: true
        fringe: false
        defects: true
        background: true
    }
    calibrate: {
        repair: {
            interpolate: true
            cosmicray: true
        }
        psf: true
        apcorr: true
        background: false
        distortion: true
        astrometry: true
        zeropoint: true
    }
    phot: true
}

detect: {
    thresholdValue: 5.0
    thresholdType: stdev
}

#measure: @@meas_algorithms:policy:MeasureSourcesDefaults.paf

defects: {
    grow: 1
}

cosmicray: {
    nCrPixelMax: 200000
}

background: {
    binsize: 512
}

filters: {
    # Translation table for astrometry.net matching, and therefore photometric calibration
    B: g
    g: g
    r: r
    i: i
    z: z
    y: z
}

distortion: {
    class: "hsc.meas.match.hscDistortion.HscDistortion"
}

instrumentExtras: {
    solveTansip: {
        CRPIXMODE: AUTO   #AUTO for AUTO MODE, MANUAL for MANUAL MODE
        CCDPMODE: 1       #1=DETERMINING CCD POSITION
        NCCD: 100         #NUMBER of CCD for analysis
        LSIPORDER: 3
        SIPORDER: 9
        PSIPORDER: 9
        CLIPSIGMA: 3.0
        CHECKFILE: 1               #1=out put fitting check file
    }
}

astrometry: {
    defaultFilterName: R
    numBrightStars: 200
    sipOrder: 4
    calculateSip: true
    starGalaxyColumnName: "starnotgal"
    pixelScaleRangeFactor: 1.5
}


psf: {
    selectName: "secondMomentStarSelector"
    select: {
        fluxLim: 200.0
	clumpNSigma: 1.5
	borderWidth: 0
	kernelSize: 21
    }
    algorithmName: "pcaPsfDeterminer"
    algorithm: {
        sizeCellX: 512
	sizeCellY: 512
	borderWidth: 0
	nIterForPsf: 10
	constantWeight: true
	lambda: 0.5
	reducedChi2ForPsfCandidates: 2.0 #1.2
	nEigenComponents: 4
	kernelSize:       21
	spatialOrder: 2
	nStarPerCell: 0                 # unlimited
	nStarPerCellSpatialFit: 10
	tolerance: 1e-2
    }
}

imports: {
    HSM: lsst.meas.extensions.shapeHSM
    KRON: lsst.meas.extensions.photometryKron
}

measure: {
    source: {
        astrom:  "SDSS"
        apFlux:  "SINC"
        modelFlux: "GAUSSIAN"
        psfFlux: "PSF"
        shape: "HSM_REGAUSS"
    }
    shape: {
        HSM_BJ: {
            enabled: true
        }
        HSM_LINEAR: {
            enabled: true
        }
        HSM_KSB: {
            enabled: true
        }
        HSM_REGAUSS: {
            enabled: true
        }
        HSM_SHAPELET: {
            enabled: true
        }
    }
    astrometry: {
        GAUSSIAN: {
            enabled: true
        }
        
        NAIVE: {
            enabled: true
        }
        
        SDSS: {
            enabled: true
        }

        ROTANGLE: {
            enabled: true
        }
    }
    photometry: {
        GAUSSIAN: {
            background: 0.0
            shiftmax: 10
        }
        NAIVE: {
            radius: 9.0
        }
        PSF: {
            enabled: true
        }
        SINC: {
            radius: 9.0
        }
        KRON: {
            enabled: true
        }
    }
}
