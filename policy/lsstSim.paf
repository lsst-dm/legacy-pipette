#<?cfg paf policy>

do: {
    isr: {
        processAmp: {
           saturation: true
           overscan: true
        }
        bias: true
        flat: true
        defects: true
        background: true
    }
    calibrate: {
        repair: {
            interpolate: true
            cosmicray: true
        }
        psf: true
        apcorr: true
        astrometry: true
        zeropoint: true
    }
    phot: true
}

background: {
    binsize: 128
}

bootstrap: {                            # detect bright objects
    thresholdValue: 60.0
}

detect: {
    thresholdValue: 5.0
    thresholdType: stdev
}

measure: @@meas_algorithms:policy:MeasureSourcesDefaults.paf

cosmicray: {
    nCrPixelMax: 200000
}

astrometry: {
    defaultFilterName: i
    numBrightStars: 100
}
