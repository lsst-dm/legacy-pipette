#<?cfg paf policy>

camera: megacam

#imports: {
#}

do: {
    isr: {
        processAmp: {
           saturation: true
           overscan: true
        }
        bias: true
        flat: true
        defects: true
        background: true
    }
    calibrate: {
        repair: {
            interpolate: true
            cosmicray: true
        }
        psf: true
        apcorr: true
        astrometry: true
        zeropoint: true
    }
    phot: true
}

detect: {
    thresholdValue: 5.0
    thresholdType: stdev
}

measure: @@meas_algorithms:policy:MeasureSourcesDefaults.paf

defects: {
    grow: 2
}

cosmicray: {
    nCrPixelMax: 200000
}

#distortion: {
#    radial: {
#}
#}

filters: {
    g: G
    i: I
    r: R
    z: Z
}

astrometry: {
    defaultFilterName: i
    numBrightStars: 200
    sipOrder: 2
    calculateSip: true
    starGalaxyColumnName: "starnotgal"
    #blindSolve: true
    #magErrorColumnPattern: "%(filter)s_ERR"
}
fringe: {
    filters: i
}