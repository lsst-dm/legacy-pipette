#<?cfg paf policy>

roots: {
    data: /path/to/data
    calib: /path/to/calib
    output: /path/for/output
}

do: {
    flat: true
    defects: true
    interpolate: true
    saturation: true
    overscan: true
    background: true
    cr: true
    phot: true
    ast: true
    cal: true
}

detect: {
    thresholdValue: 5.0
    thresholdType: stdev
}

measure: @@meas_algorithms:policy:MeasureSourcesDefaults.paf

defects: {
    grow: 2
}

cr: {
    nCrPixelMax: 100000
}

ast: {
    defaultFilterName: MAG_R
    numBrightStars: 100
}
