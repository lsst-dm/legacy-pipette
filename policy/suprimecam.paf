#<?cfg paf policy>

do: {
    isr: {
        processAmp: {
            saturation: true
            overscan: true
        }
        assembly: true
        bias: false
        variance: true
        dark: false
        flat: true
        fringe: true
        defects: true
        background: true
    }
    calibrate: {
        repair: {
            interpolate: true
            cosmicray: true
        }
        psf: true
        apcorr: true
        background: false
        distortion: true
        astrometry: true
        zeropoint: true
    }
    phot: true
}

detect: {
    thresholdValue: 5.0
    thresholdType: stdev
}

measure: @@meas_algorithms:policy:MeasureSourcesDefaults.paf

defects: {
    grow: 2
}

cosmicray: {
    nCrPixelMax: 200000
}

distortion: {
    radial: { 
        coeffs: -6.61572e-18 5.69338e-14 3.03146e-10 7.16417e-08 1.0 0.0
        actualToIdeal: false
        step: 10.0
    }
}

filters: {
    # Translation table for astrometry.net matching, and therefore photometric calibration
    B: G
    r: R
    i: I
    z: Z
    y: Z
}

astrometry: {
    defaultFilterName: R
    numBrightStars: 200
    sipOrder: 2
    starGalaxyColumnName: "STARNOTGAL"
    magErrorColumnPattern: "%(filter)s_ERR"
}
