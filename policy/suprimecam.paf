#<?cfg paf policy>

do: {
    saturation: true
    overscan: true
    flat: true
    defects: true
    interpolate: true
    background: true
    cr: true
    phot: true
    distortion: true
    ast: true
    cal: true
}

detect: {
    thresholdValue: 5.0
    thresholdType: stdev
}

measure: @@meas_algorithms:policy:MeasureSourcesDefaults.paf

defects: {
    grow: 2
}

cr: {
    nCrPixelMax: 200000
}

distortion: {
    radial: { 
        coeffs: -6.61572e-18 5.69338e-14 3.03146e-10 7.16417e-08 1.0 0.0
        actualToIdeal: false
        step: 10.0
    }
}

filters: {
    # Translation table for astrometry.net matching, and therefore photometric calibration
    B: G
    r: R
    i: I
    z: Z
    y: Z
}

ast: {
    defaultFilterName: R
    numBrightStars: 200
    sipOrder: 4
    starGalaxyColumnName: "STARNOTGAL"
    magErrorColumnPattern: "%(filter)s_ERR"
}
