#<?cfg paf policy>

camera: suprimecam

do: {
    isr: {
        processAmp: {
            saturation: true
            overscan: true
        }
        assembly: true
        bias: false
        variance: true
        dark: false
        flat: true
        fringe: true
        defects: true
        background: true
    }
    calibrate: {
        repair: {
            interpolate: true
            cosmicray: true
        }
        psf: true
        apcorr: true
        background: false
        distortion: true
        astrometry: true
        zeropoint: true
    }
    phot: true
}

imports: {
    HSM: lsst.meas.extensions.shapeHSM
    KRON: lsst.meas.extensions.photometryKron
}

detect: {
    thresholdValue: 5.0
    thresholdType: stdev
}

measure: {
    source: {
        astrom:  "SDSS"
        apFlux:  "SINC"
        modelFlux: "GAUSSIAN"
        psfFlux: "PSF"
        shape: "HSM_KSB"
    }
    shape: {
        HSM_BJ: {
            enabled: true
        }
        HSM_LINEAR: {
            enabled: true
        }
        HSM_KSB: {
            enabled: true
        }
#        HSM_REGAUSS: {
#            enabled: true
#        }
        HSM_SHAPELET: {
            enabled: true
        }
    }
    astrometry: {
        GAUSSIAN: {
            enabled: true
        }
        
        NAIVE: {
            enabled: true
        }
        
        SDSS: {
            enabled: true
        }
    }
    photometry: {
        GAUSSIAN: {
            background: 0.0
            shiftmax: 10
        }
        NAIVE: {
            radius: 9.0
        }
        PSF: {
            enabled: true
        }
        SINC: {
            radius: 9.0
        }
        #KRON: {
        #    enabled: true
        #}
    }
}

defects: {
    grow: 2
}

cosmicray: {
    nCrPixelMax: 200000
}

distortion: {
    radial: { 
        coeffs: -6.61572e-18 5.69338e-14 3.03146e-10 7.16417e-08 1.0 0.0
        actualToIdeal: false
        step: 10.0
    }
}

instrumentExtras: {
    solveTansip: {
        CRPIXMODE: MANUAL #AUTO for AUTO MODE, MANUAL for MANUAL MODE
        CCDPMODE: 1       #1=DETERMINING CCD POSITION
        NCCD: 10         #NUMBER of CCD for analysis
        LSIPORDER: 3
        SIPORDER: 5
        PSIPORDER: 7
        CLIPSIGMA: 3.0
        CRPIX1: 0.0                #CRPIX VALUE OF AXIS 1(MANUAL MODE)
        CRPIX2: 0.0                #CRPIX VALUE OF AXIS 2(MANUAL MODE)
        CHECKFILE: 1               #1=out put fitting check file
    }
}

filters: {
    # Translation table for astrometry.net matching, and therefore photometric calibration
    B: G
    r: R
    i: I
    z: Z
    y: Z
}

astrometry: {
    defaultFilterName: MAG_R
    numBrightStars: 200
    sipOrder: 2
    starGalaxyColumnName: "STARNOTGAL"
    magErrorColumnPattern: "%(filter)s_ERR"
}

fringe: {
    filters: y
    filters: W-S-ZR
}


